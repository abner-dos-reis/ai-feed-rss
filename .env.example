# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database Configuration
DATABASE_URL=postgresql://postgres:your-secure-password@database:5432/ai_feed_rss
POSTGRES_DB=ai_feed_rss
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
ENVIRONMENT=production
DEBUG=0
SECRET_KEY=your-very-secure-secret-key-generate-a-random-one

# API Keys
OPENAI_API_KEY=your-actual-openai-api-key
HUGGINGFACE_API_KEY=your-actual-huggingface-api-key

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_ENVIRONMENT=production

# Security
JWT_SECRET=your-very-secure-jwt-secret
JWT_EXPIRATION=7200

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json