# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@database:5432/ai_feed_rss
POSTGRES_DB=ai_feed_rss
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
ENVIRONMENT=development
DEBUG=1
SECRET_KEY=your-secret-key-change-in-production-please

# API Keys (Set your actual keys here)
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:7201
REACT_APP_ENVIRONMENT=development

# Ports Configuration
FRONTEND_PORT=7200
BACKEND_PORT=7201
DATABASE_PORT=7202
REDIS_PORT=7203
NGINX_PORT=7204

# RSS Configuration
RSS_FETCH_INTERVAL=3600  # seconds
MAX_RSS_ITEMS=1000
RSS_TIMEOUT=30

# AI Configuration
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=7200  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json